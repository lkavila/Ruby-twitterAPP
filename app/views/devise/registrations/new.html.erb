              <label for="password_confirmation" style="width:100%;">Confirm password
                  <input id="password_confirmation" type="text" class="myInput" style="width:100%;color:black;">
              </label>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" style="width:150px;" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>
